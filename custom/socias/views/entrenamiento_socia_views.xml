<?xml version="1.0"?>
  <odoo>

    <!-- Para la vista de Listado o Tree-->
    <record id="entrenamiento_socia_view_tree" model="ir.ui.view">
      <field name="name">entrenamiento.socia.tree</field>
      <field name="model">entrenamiento.socia</field>
      <field name="arch" type="xml">
        <tree string="Propiedad"> 
            <field name="nombre" string="Nombre entrenamiento"/>
            <field name="fecha_entreno" string="Fecha realizada"/>
            <field name="num_vueltas" string="Número de vueltas"/>
            <field name="maquinas_entrenamiento_ids" string="Máquinas usadas" widget="many2many_tags"/>
        </tree>
      </field>
    </record>


<!-- Para la vista de formulario Form-->
    <record id="entrenamiento_socia_view_form" model="ir.ui.view">
        <field name="name">entrenamiento.socia.form</field>
        <field name="model">entrenamiento.socia</field>
        <field name="arch" type="xml">
            <form string="Entrenamiento">
                <sheet>
                    <group>
                        <h2>Nombre: <field name="nombre"/></h2>
                    </group>
                    <group>
                        <field name="num_vueltas" string="Número de vueltas"/>
                        <field name="usa_maquinas" string="¿Usó máquinas?"/>
                        <field name="maquinas_entrenamiento_ids" widget="many2many_tags" attrs="{'invisible':[('usa_maquinas', '==', False)]}" options="{'no_create': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Para que aparezca el boton en el menu-->
    <record id="entrenamiento_socia_action" model="ir.actions.act_window"><!-- el id que pongamos aqui servirá para llamarlo en el estate_menus-->
      <field name="name">Entrenamiento</field>
      <field name="res_model">entrenamiento.socia</field>
      <field name="view_mode">tree,form</field>
    </record>

  </odoo>