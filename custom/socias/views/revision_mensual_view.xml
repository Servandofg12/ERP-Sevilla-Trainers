<?xml version="1.0"?>
  <odoo>

    <!-- Para la vista de Listado o Tree-->
    <record id="revision_mensual_view_tree" model="ir.ui.view">
      <field name="name">revision.mensual.tree</field>
      <field name="model">revision.mensual</field>
      <field name="arch" type="xml">
        <tree string="Propiedades">
          <field name="fecha_realizada" string="Fecha realizada" readonly="True"></field>
          <field name="nuevo_peso" string="Nuevo peso" attrs="{'readonly': [('id','!=', False)]}"></field>
          <field name="nueva_altura" string="Nueva altura" attrs="{'readonly': [('id','!=', False)]}"></field>
          <field name="porcentaje_grasa_corporal" string="Porcentaje de grasa corporal (%)" attrs="{'readonly': [('id','!=', False)]}"/>
          <field name="indice_masa_corporal" string="Índice de masa corporal" attrs="{'readonly': [('id','!=', False)]}"></field>
          <!--<field name="medida_pecho" string="Medida pecho" attrs="{'readonly': [('id','!=', False)]}"></field>
          <field name="medida_cintura" string="Medida cintura" attrs="{'readonly': [('id','!=', False)]}"></field>
          <field name="medida_abdomen" string="Medida abdomen" attrs="{'readonly': [('id','!=', False)]}"></field>
          <field name="medida_caderas" string="Medida caderas" attrs="{'readonly': [('id','!=', False)]}"></field>
          <field name="medida_muslos" string="Medida muslos" attrs="{'readonly': [('id','!=', False)]}"></field>
          <field name="medida_brazos" string="Medida brazos" attrs="{'readonly': [('id','!=', False)]}"></field> -->
        </tree>
      </field>
    </record>


  <!-- Para la vista de formulario Form-->
    <record id="revision_mensual_view_form" model="ir.ui.view">
        <field name="name">revision.mensual.form</field>
        <field name="model">revision.mensual</field>
        <field name="arch" type="xml">
            <form string="Revisión Mensual">
                <sheet>
                    <group>
                        <group>
                          <field name="nuevo_peso" string="Nuevo peso" attrs="{'readonly': [('id','!=', False)]}"></field>
                          <field name="nueva_altura" string="Nueva altura" attrs="{'readonly': [('id','!=', False)]}"></field>
                          <field name="porcentaje_grasa_corporal" string="Porcentaje de grasa corporal (%)" attrs="{'readonly': [('id','!=', False)]}"/>
                          <field name="indice_masa_corporal" string="Índice de masa corporal" attrs="{'readonly': [('id','!=', False)]}"></field>
                        </group>
                        <group>
                          <field name="medida_pecho" string="Medida pecho" attrs="{'readonly': [('id','!=', False)]}"></field>
                          <field name="medida_cintura" string="Medida cintura" attrs="{'readonly': [('id','!=', False)]}"></field>
                          <field name="medida_abdomen" string="Medida abdomen" attrs="{'readonly': [('id','!=', False)]}"></field>
                          <field name="medida_caderas" string="Medida caderas" attrs="{'readonly': [('id','!=', False)]}"></field>
                          <field name="medida_muslos" string="Medida muslos" attrs="{'readonly': [('id','!=', False)]}"></field>
                          <field name="medida_brazos" string="Medida brazos" attrs="{'readonly': [('id','!=', False)]}"></field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Para que aparezca el boton en el menu-->
    <record id="revision_mensual_action" model="ir.actions.act_window"><!-- el id que pongamos aqui servirá para llamarlo en el usuario_socia_menu-->
      <field name="name">Revisión Mensual</field>
      <field name="res_model">revision.mensual</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{'search_default_available': True}</field>
    </record>

  </odoo>